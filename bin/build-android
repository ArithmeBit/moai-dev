#!/bin/bash

source ~/.bash_profile

cd ant/libmoai
./clean.sh
if [[ $? -ne 0 ]]; then
    exit 1
fi

./build.sh
if [[ $? -ne 0 ]]; then
    exit 1
fi


## Create default host
cd ..
./make-host.sh -p com.getmoai.samples -s
if [[ $? -ne 0 ]]; then
    exit 1
fi

cd untitled-host
find . -name ".?*" -type d -prune -o -name "settings-local.sh" -type f -prune -o -type f -print0 | cpio -pmd0 --quiet ../../distribute/moai-sdk/hosts/ant
if [[ $? -ne 0 ]]; then
    exit 1
fi
